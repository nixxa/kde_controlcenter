    "version": "0.2.0",
    "configurations": [
        {
            "type": "coreclr",
            "request": "launch",
            "name": "Launch Plasmoid",
            "program": "plasmoidviewer",
            "args": [
                "-a",
                "${workspaceRoot}/package",
                "-s",
                "1000x800"
            ],
            "env": {
                "QT_FORCE_STDERR_LOGGING": "1"
            },
            "console": "internalConsole"
        }
    ]
}
